{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    "lib": ["esnext"],
    "experimentalDecorators": true,
    "outDir": "dist",

    "strict": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["*.ts", "*.d.ts", "**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
